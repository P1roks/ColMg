<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ColMg.ViewModels"
             x:Class="ColMg.Views.EditIemPage"
             Title="EditIemPage">
    <ContentPage.BindingContext>
        <viewmodels:EditItemViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding Item}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding Column}" />
                        <Entry Text="{Binding Value}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Zapisz" Command="{Binding SaveItemCommand}" />
    </VerticalStackLayout>
</ContentPage>